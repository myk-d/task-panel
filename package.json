{
	"name": "myslennya-tasks",
	"version": "0.1.0",
	"description": "Flyout task panel",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"start": "electron .",
		"start:log": "set ELECTRON_ENABLE_LOGGING=1 && electron .",
		"build": "electron-builder",
		"dev": "electronmon --trace-warnings ."
	},
	"build": {
		"appId": "com.myslennya.taskpanel",
		"win": {
			"target": "nsis",
			"icon": "icon.png"
		},
		"mac": {
			"category": "public.app-category.productivity",
			"target": [
				"dmg",
				"zip"
			],
			"icon": "icon.png",
			"extendInfo": {
				"LSUIElement": true
			}
		}
	},
	"dependencies": {
		"electron-store": "^9.0.0"
	},
	"devDependencies": {
		"electron": "^31.0.0",
		"electron-builder": "^24.13.3",
		"electronmon": "^2.0.3"
	}
}
